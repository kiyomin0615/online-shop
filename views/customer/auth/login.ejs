<%- include("../../shared/includes/head", {pageTitle: "Login"}) %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
<%- include("../../shared/includes/header") %>
<main>
  <h1>로그인</h1>
  <% if (sessionData.errorMessage) { %>
    <section class="alert">
      <h2>유효하지 않은 입력</h2>
      <p><%= sessionData.errorMessage %></p>
    </section>
  <% } %>
  <form action="/login" method="POST">
    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
    <p class="form-control">
      <label for="email">이메일</label>
      <input type="email" id="email" name="email" required value="<%= sessionData.email %>">
    </p>
    <p class="form-control">
      <label for="password">비밀번호</label>
      <input type="password" id="password" name="password" required value="<%= sessionData.password %>">
    </p>
    <button class="btn">로그인</button>
    <p id="switch"><a href="/signup">회원가입으로 이동</a></p>
  </form>
</main>
<%- include("../../shared/includes/footer") %>