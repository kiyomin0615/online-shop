  <%- include("../../shared/includes/head", {pageTitle: "Signup"}) %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include("../../shared/includes/header") %>
  <main>
    <h1>회원가입</h1>
    <% if (sessionData.errorMessage) { %>
      <section class="alert">
        <h2>유효하지 않은 입력</h2>
        <p><%= sessionData.errorMessage %></p>
      </section>
    <% } %>
    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <p class="form-control">
        <label for="email">이메일</label>
        <input type="email" id="email" name="email" required value="<%= sessionData.email %>">
      </p>
      <p class="form-control">
        <label for="confirm-email">이메일 확인</label>
        <input type="email" id="confirm-email" name="confirm-email" required value="<%= sessionData.confirmEmail %>">
      </p>
      <p class="form-control">
        <label for="password">비밀번호</label>
        <input type="password" id="password" name="password" required minlength="6" value="<%= sessionData.password %>">
      </p>
      <hr />
      <p class="form-control">
        <label for="fullname">이름</label>
        <input type="text" id="fullname" name="fullname" required value="<%= sessionData.fullname %>">
      </p>
      <p class="form-control">
        <label for="city">시/도</label>
        <input type="text" id="city" name="city" required value="<%= sessionData.city %>">
      </p>
      <p class="form-control">
        <label for="street">도로명 주소</label>
        <input type="text" id="street" name="street" required value="<%= sessionData.street %>">
      </p>
      <p class="form-control">
        <label for="postal">우편번호</label>
        <input type="text" id="postal" name="postal" required minlength="5" maxlength="6" value="<%= sessionData.postal %>">
      </p>
      <button class="btn">계정 생성</button>
      <p id="switch"><a href="/login">로그인으로 이동</a></p>
    </form>
  </main>
<%- include("../../shared/includes/footer") %>