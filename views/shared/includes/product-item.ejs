<article class="product-item">
  <img src="<%= product.imageURL %>" alt="<%= product.title %>">
  <div class="product-item-content">
    <h2><%= product.title %></h2>
    <div class="product-item-actions">
      <% if (locals.isAdmin) { %>
        <a class="btn btn-alt" href="/admin/products/<%= product.id %>">수정</a>
        <button class="btn btn-alt" data-pid="<%= product.id %>" data-token="<%= locals.csrfToken %>">삭제</button>
      <% } else { %>
        <a class="btn btn-alt" href="/products/<%= product.id %>">자세히 보기</a>
      <% } %>
    </div>
  </div>
</article>